<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E3.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="num.jpg"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Entry x:Name="num1" Placeholder="Ingrese la calificacion 1"
                   Keyboard="Numeric"/>

            <Entry x:Name="num2" Placeholder="Ingrese la calificacion 2"
                   Keyboard="Numeric"/>

            <Entry x:Name="num3" Placeholder="Ingrese la calificacion 3"
                   Keyboard="Numeric"/>

            <Entry x:Name="num4" Placeholder="Ingrese la calificacion 4"
                   Keyboard="Numeric"/>

            <Entry x:Name="num5" Placeholder="Ingrese la calificacion 5"
                   Keyboard="Numeric"/>

            <Label x:Name="La"
                  Text="La calificacion es :"/>

            <Button Text="Calificar promedio"
                    Clicked="Button_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
